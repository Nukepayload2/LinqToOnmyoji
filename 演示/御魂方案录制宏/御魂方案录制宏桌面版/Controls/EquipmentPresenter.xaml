<UserControl x:Class="EquipmentPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:御魂方案录制宏桌面版"
             mc:Ignorable="d">
    <Grid Height="64" Width="64" >
        <Ellipse Margin="4.7,4.6,3.9,4.6">
            <Ellipse.Fill>
                <ImageBrush x:Name="ImgEquipment" 
                            ImageSource="pack://application:,,,/御魂方案录制宏桌面版;component/Assets/Equipments/300002.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <Image x:Name="ImgFrame" Stretch="Fill" 
               Source="pack://application:,,,/御魂方案录制宏桌面版;component/Assets/EquipmentFrame.png"
               RenderTransformOrigin="0.508,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="RotFrame"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</UserControl>
